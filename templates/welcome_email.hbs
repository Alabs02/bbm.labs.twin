    <style>
      html:root {
        --bg: #0f0e10;
        --info: #34aaf3;
        --primary-light: #fceaf0;
        --primary: #e4457b;
        --text-color: rgba(232, 246, 254, 0.8);
        --tertiary-500: #19181a;
      }

      *::selection {
        color: var(--text-color);
        background-color: var(--info);
      }

      * {
        line-height: 28px;
        letter-spacing: 0.2pt;
      }

      .font-squada-one {
        font-family: "Squada One", sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      .text-info {
        color: var(--info);
      }

      a {
        font-weight: 500;
        color: var(--info);
        transition: all 0.5s;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      a:active,
      a:focus,
      a:visited {
        color: var(--primary);
      }

      body,
      html {
        width: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        min-height: 100vh;
        font-family: "Noto Sans", sans-serif;
        overflow-x: hidden;
        color: var(--text-color) !important;
        background: var(--bg) !important;
      }

      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        display: flex;
        flex-direction: column;
      }

      @media (min-width: 1024px) {
        body {
          justify-content: space-between;
        }
      }

      h3,
      .h3 {
        font-size: 32px;
      }

      h4,
      .h4 {
        font-size: 28px;
      }

      ul {
        padding: 0 24px;
      }

      li {
        list-style: none;
        padding-left: 28px;
        margin-bottom: 12px;
        position: relative;
      }

      li:last-child {
        margin-bottom: 0;
      }

      li:before {
        content: "";
        position: absolute;
        top: 25%;
        left: 0;
        width: 8px;
        height: 8px;
        background-color: var(--info);
        border-radius: 50%;
      }

      a.btn {
        cursor: pointer;
        color: var(--bg);
        background-color: var(--info);
        border: none;
        padding: 16px 24px;
        border-radius: 999px;
        font-size: 15px;
        font-weight: 500;
      }

      a.btn:hover {
        text-decoration: none;
        color: var(--primary-light);
        background-color: var(--primary);
      }

